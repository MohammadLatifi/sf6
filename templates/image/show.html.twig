{% extends 'admin.base.html.twig' %}

{% block title %}
    Image
{% endblock %}

{% block body %}
    <h1>
        Image
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>
                    Id
                </th>
                <td>
                    {{ image.id }}
                </td>
            </tr>
            <tr>
                <th>
                    Name
                </th>
                <td>
                    {{ image.name }}
                </td>
            </tr>
            <tr>
                <th>
                    Path
                </th>
                <td>
                    {{ image.path }}
                </td>
            </tr>
            <tr>
                <th>
                    Created_at
                </th>
                <td>
                    {{ image.createdAt ? image.createdAt|date('Y-m-d H:i:s') : '' }}
                </td>
            </tr>
            <tr>
                <th>
                    Updated_at
                </th>
                <td>
                    {{ image.updatedAt ? image.updatedAt|date('Y-m-d H:i:s') : '' }}
                </td>
            </tr>
        </tbody>
    </table>

    <a class='btn btn-primary text-white' href="{{ path('app_image_index') }}">
        back to list
    </a>

    <a class='btn btn-primary text-white' href="{{ path('app_image_edit', {'id': image.id}) }}">
        edit
    </a>

    {{ include('image/_delete_form.html.twig') }}

    <div class='d-flex p-2'>

        <img alt='image' class='img-fluid' src="{{ image.path }}" />

    </div>
</div>{% endblock %}